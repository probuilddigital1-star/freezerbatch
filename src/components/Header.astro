---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/cocktails', label: 'Recipes' },
  { href: '/how-it-works', label: 'How It Works' },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-primary-600/95 backdrop-blur-xl border-b border-primary-700/50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <nav class="flex items-center justify-between h-16" aria-label="Main navigation">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <div class="w-9 h-9 bg-gradient-to-br from-accent-400 to-accent-500 rounded-xl flex items-center justify-center shadow-lg shadow-accent-500/20 group-hover:shadow-accent-500/30 transition-shadow">
          <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 3v18M3 12h18M7.5 7.5l9 9M16.5 7.5l-9 9" stroke-linecap="round"/>
          </svg>
        </div>
        <span class="font-display font-bold text-xl text-white">
          Freezer<span class="text-accent-300">Batch</span>
        </span>
      </a>

      <!-- Desktop Nav -->
      <ul class="hidden md:flex items-center gap-1">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class:list={[
                'px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200',
                currentPath === link.href
                  ? 'bg-accent-500/20 text-accent-300'
                  : 'text-white/90 hover:text-white hover:bg-white/10'
              ]}
              aria-current={currentPath === link.href ? 'page' : undefined}
            >
              {link.label}
            </a>
          </li>
        ))}
        <li class="ml-2">
          <a href="#calculator" class="btn-primary text-sm py-2">
            Start Calculating
          </a>
        </li>
      </ul>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        class="md:hidden p-3 rounded-xl text-white/90 hover:bg-white/10 transition-colors min-w-[44px] min-h-[44px] flex items-center justify-center"
        aria-label="Open menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
        id="mobile-menu-button"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </nav>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-6">
      <ul class="flex flex-col gap-1">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class:list={[
                'block px-4 py-3 rounded-xl font-medium transition-all duration-200',
                currentPath === link.href
                  ? 'bg-accent-500/20 text-accent-300'
                  : 'text-white/90 hover:text-white hover:bg-white/10'
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
        <li class="mt-2">
          <a href="#calculator" class="btn-primary w-full text-center">
            Start Calculating
          </a>
        </li>
      </ul>
    </div>
  </div>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
    menuButton.setAttribute('aria-expanded', String(!isExpanded));
    mobileMenu?.classList.toggle('hidden');
  });
</script>
